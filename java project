 public static void main(String[] args){ // creating and strating main method
    
   {  
   	DVD x[]= new DVD [3]; // creating and setting up new arrays 
   	
          menu(x);  //  this is a method been called into the main method
   }    
      
   System.exit(0); // close main method 
    
