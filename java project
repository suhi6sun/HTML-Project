//=========================================================
    
   public static void menu(DVD x[])  // creating a method called menu and passing by my arrays
   {
    
    int choice=0;  // condition if =0 then start while loop
    
    while(choice>= 0) { // while loop will start until user press -1 to stop 


    
    
      	
      	
       
        choice = Integer.parseInt(JOptionPane.showInputDialog( "press 1.... for User_Input\n" +   // dialog box for user to enter the  menu opition 
                                              " press 2.... for Search\n" +
                                              	"Press 3....for Save /n" +
                                              	"press 4....for print /n" +
                                              	"press 5.... for sorting Arrays /n" +
                                              " press -1 to exit")); // press - 1 to exit while loop
                                              
         //choice=Integer.parseInt(Str);                                           
                                 
    if (choice==1)  // if user press 1 then it bring the User_input(x) method 
    {
     
        User_Input(x); 
    }
      
     if (choice==2) // if user press 2 then bring the SearchMethod 
    {
       SearchMethod( x);
    }
    
    if  (choice==3) // 
    {
      //Save();
    }
     if  (choice==4)
    {
  //   printDVD(x);
    }
      if  (choice==5) 
    {
     bubble_sort (x);
    }
     
     else if (choice== -1)
     {
         System.out.print("Bye");
     }                                      
                                 
     
     }
   }// end of menu method
   
//========================================================= 
public static void User_Input (DVD x[]) // uses For loop to input from user into array
{ // starting User_Input method

  int index;
  for(index =0; index<3; index++) // for loop 
  { // staring for loop 
    String title=JOptionPane.showInputDialog("please enter the title of  dvd...");  // user input for entering the dvd name
    String genre=JOptionPane.showInputDialog("please enter the genre...");   // input dialog box for genre
    double price= Double.parseDouble(JOptionPane.showInputDialog("please enter the price "));  // user input the price of dvd 
    
    x[index] = new DVD(title,genre,price);      // constructor
   
   System.out.println ( x [index] .title + "" + x [index] .genre + "" + x [index] .price);  // will print the JOptionPane of title,genre, price
   
    x[index]= new DVD(title,genre,price); // creating a new object 
     	
     	
     x[index].printDVD();// calling print methods 
     
     menu(x); // calling menu method
   
  } // end For lopp
} //method User_Input    

    
    
