public static void bubble_sort (DVD x[])
 	{
 		int total=0; int y=1;
 		
   		 for (int pass = 0; pass < x.length - 1; pass++)  //  happens 3 times only - controls inner loop
    	{
     		for(int counter = 0; counter < x.length -  y; counter++) // happens 4 times 
     		{
      			if (x[counter].price > x[counter+1].price) //compare 2 elements in the array
	     			swap (x, counter, counter+1); // pass parameters
	     			System.out.println ( x [counter] .title + "" + x [counter] .genre + "" + x [counter] .price);  // will print the JOptionPane of title,genre, price
	     			
	     	//	total++; // number of loops
      			//print_array (array, arraySize); // print intermediate states as is sorted
     		}
     		
     		
    	}
    	
    	//for(int counter = 0; counter < x.length - 1; counter++) )
    	//{
    		 //System.out.println ( x [index] .title + "" + x [index] .genre + "" + x [index] .price);  // will print the JOptionPane of title,genre, price
   
    	//}
    	
 	}
// Exchange a given pair of values given by their positions in an array
	public static void swap (DVD x [], int p1, int p2 ) 
  	{
    	 double temp;

	    temp = x[p1].price;
    	x[p1].price = x[p2].price;
    	x[p2].price = temp;
  	}

	
    	
//==================================================================================
public static void SearchMethod (DVD x[])
{
       
        String title=JOptionPane.showInputDialog("please enter the title of  dvd you are  searching for ..."); // user input dialog box 
       
        for( int i =0; i<x.length; i++) //for loop 
        {
         if (x [i] .title.equalsIgnoreCase(x [i] .title)) { // allow the user to type in what they searching for 
         
         System.out.println(x[i]+ " DVD is found"); // print line 
         JOptionPane.showInputDialog(null,"DVD is  found!!!"); // JOpitionpane that reutrns to if dvd is found.
         return;
       
         } // end if statement
        } // end for loop 

         JOptionPane.showInputDialog(null,"DVD is not found!!!"); // JOpitionpane that reutrns to if dvd is  not found
         System.out.println("DVD is not found!!!"); // print this line 
        return;
     

} // end of SearchMethod
//===================================================================================    
  } // end of  Project  
class DVD
{
	String title; //data type and variable for holding title and also thoses are characteristics for my DVD object
	String genre; 
	double price;
	
	
	public DVD()   //default construtor method 
	
	{
		title="";
		genre="";
		price=0.0;
	}
	
    public DVD(String c,String g,double ye) // construtor with passing parameter
{    
     title=c;
     genre=g;
     price=ye;
}

	public void printDVD()  // printing method
	{
		System.out.println("title: \t\t" + title);
		System.out.println("genre: \t\t" + genre);
		System.out.println("price: \t\t" + price);
	
	}
	

}// end of class DVD
